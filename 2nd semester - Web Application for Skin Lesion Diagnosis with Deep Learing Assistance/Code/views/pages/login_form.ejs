<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-t-85 p-b-20">
				<form class="login100-form validate-form" method="POST" action="/user_authentication">
					<span class="login100-form-title p-b-70">
						Log In
					</span>
					<span class="login100-form-avatar">
						<img src="img/core-img/SD_logo.png" alt="AVATAR">
					</span>
					<% if (message.length > 0) { %>
						<div class="alert alert-danger alert-dismissible">
						  <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
							  <span aria-hidden="true">&times;</span>
							</button>
							<%= message %>
						</div>
					  <% } %>
					<div class="wrap-input100 validate-input m-t-85 m-b-35" data-validate = "Enter username">
						<input class="input100" type="text" name="username" required>
						<span class="focus-input100" data-placeholder="Email address"></span>
					</div>

					<div class="wrap-input100 validate-input m-b-50" data-validate="Enter password">
						<input class="input100" type="password" name="pass" required>
						<span class="focus-input100" data-placeholder="Password"></span>
					</div>

					<div class="wrap-input100 validate-input m-t-85 m-b-35 form-group">
						<!-- Link o pulsante per l'attivazione del dropdown -->
						<!-- Menu dropdown -->
						<select class="input100" name="usertype" required="required">
							<option selected disabled>--Select User--</option>
							<option value="patient">Patient</option>
							<option value="doctor">Doctor</option>
						</select> 
					</div>
   
					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Login
						</button>
					</div>

					<!--<ul class="login-more p-t-190">
						<li class="m-b-8">
							<span class="txt1">
								Forgot
							</span>

							<a href="#" class="txt2">
								Username / Password?
							</a> 
						</li>-->
					</ul>
				</form>
				<li>
					<span class="txt1">
						Donâ€™t have an account?
					</span>
					<div class="login-register-btn mx-3">
							<li class="<%= selected_menu == 'Registration' ? 'current-item' : '' %>"><a href="/registration_form"><b>Sign Up</b></a></li>
					</div>		
					
				</li>
			</div>
		</div>
	</div>
	

	<div id="dropDownSelect1"></div>
	
